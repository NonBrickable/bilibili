<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper 为根元素节点， 一个namespace对应一个dao -->
<mapper namespace="com.playtube.dao.UserMomentsDao">
    <insert id="addUserMoments" parameterType="com.playtube.pojo.UserMoments" useGeneratedKeys="true" keyProperty="id">
        insert into t_user_moments(user_id, type, content_id, create_time)
        values (#{userId}, #{type}, #{contentId}, now())
    </insert>
    <select id="getUserMomentsByUserId" resultType="com.playtube.pojo.UserMoments">
        select *
        from t_user_moments
        where user_id in
        <foreach collection="followingUserList" index="index" item="userId" open="(" close=")" separator=",">
            #{userId}
        </foreach>
        order by create_time desc
        limit 200
    </select>

</mapper>